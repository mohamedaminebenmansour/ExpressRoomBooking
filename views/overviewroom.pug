extends base

block content
  main.main
    .card-container
    
      each room in rooms
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/rooms/${room.imageCover}`, alt=`${room.name}`)
            h3.heading-tertirary
              span= room.name

          .card__details
            h4.card__sub-heading= `capacity :${room.capacity}`
            p.card__text= room.summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `${room.capacity} people`

          .card__footer
            p
              span.card__footer-value= `$${room.price}`
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= room.ratingsAverage
              | 
              span.card__footer-text= `rating (${room.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/room/${room.slug}`) Details